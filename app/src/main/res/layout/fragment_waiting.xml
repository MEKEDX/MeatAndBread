<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_count_down"
        android:minWidth="400dp"
        android:minHeight="400dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:rotation="-90"
        android:max="10"
        android:background="@drawable/circular_progress_bar_unfocus"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:progress="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/count_down_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="52sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:00" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_14"
        android:textColor="@color/white"
        android:text="Min"
        app:layout_constraintBottom_toBottomOf="@+id/count_down_txt_view"
        app:layout_constraintEnd_toStartOf="@+id/count_down_txt_view"
        app:layout_constraintTop_toTopOf="@+id/count_down_txt_view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_14"
        android:text="Sec"

        app:layout_constraintBottom_toBottomOf="@+id/count_down_txt_view"
        app:layout_constraintStart_toEndOf="@+id/count_down_txt_view"
        app:layout_constraintTop_toTopOf="@+id/count_down_txt_view" />

</androidx.constraintlayout.widget.ConstraintLayout>